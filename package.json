{
  "name": "@quak.lib/qtheme",
  "version": "1.3.1",
  "description": "Manage themes in your Angular/React/Svelte/any framework/JS/TS app. Production-ready, well documented and tested.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "prettier:check": "prettier --check \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "jest --config jestconfig.json",
    "prepublishOnly": "npm test && npm run lint",
    "publish": "npm run build && npm publish --access public"
  },
  "keywords": [
    "react theme",
    "angular theme",
    "js theme",
    "ts theme",
    "react",
    "angular",
    "js",
    "ts",
    "javascript",
    "typescript",
    "css-in-js",
    "cssinjs",
    "theming",
    "theme",
    "themes",
    "theme changer",
    "theme manager"
  ],
  "author": "QUAK Kacper Walczak",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "prettier": "^2.8.7",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.3"
  }
}
